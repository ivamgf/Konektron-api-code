{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://konektron.local/api/signin.json#",
    "type": "object",
    "properties": {
        "pr_email": {
            "type": "string",
            "format": "email",
            "minLength": 1,
            "maxLength": 200
        },
        "pr_password": {
            "type": "string",
            "minLength": 1,
            "maxLength": 12
        }
    },
    "required": ["pr_email", "pr_password"],
    "additionalProperties": false
}
